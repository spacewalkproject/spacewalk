<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.redhat.rhn.domain.org.TemplateString"
           table="RHNTEMPLATESTRING">
        <id name="id" type="long" column="id">
            <meta attribute="scope-set">protected</meta>
            <generator class="sequence">
                <param name="sequence">RHN_TEMPLATE_STR_ID_SEQ</param>
            </generator>
        </id>
		<property name="label" column="label" type="string" length="64" />
		<property name="value" column="value" type="string" length="4000" />
		<property name="description" column="description" type="string" length="512" />
		<property name="created" column="created" type="timestamp" insert="false" update="false" />
		<property name="modified" column="modified" type="timestamp" insert="false" update="false" />
		<many-to-one name="category"
                     column="category_id"
                     class="com.redhat.rhn.domain.org.TemplateCategory"
                     not-null="true"
                     insert="false"
                     update="false"
                      />
    </class>
    <query name="TemplateString.findByLabel">
        <![CDATA[from com.redhat.rhn.domain.org.TemplateString as t where t.label = :label]]>
    </query>
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.redhat.rhn.domain.config.ConfigFileName"
           table="rhnConfigFileName"
           mutable="false" >
        <cache usage="read-only"/>
		<id name="id" type="long" column="id">
			<meta attribute="scope-set">protected</meta>
			<generator class="assigned" />
		</id>
		<property name="path" column="path" type="string" length="1024" />
		<property name="created" column="created" type="timestamp" />
		<property name="modified" column="modified" type="timestamp" />
	</class>

    <query name="ConfigFileName.findByPath">
        <![CDATA[from com.redhat.rhn.domain.config.ConfigFileName as c
                where c.path = :path]]>
    </query>

</hibernate-mapping>

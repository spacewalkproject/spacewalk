<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.redhat.rhn.domain.server.VirtualInstanceType"
           mutable="false"
           table="RhnVirtualInstanceType">

    	<cache usage="read-only"/>
    	
        <id name="id" type="long" column="id">
            <meta attribute="scope-set">protected</meta>
            <generator class="native"/>
        </id>

        <property name="name" column="name" type="string" length="128"/>
        <property name="label" column="label" type="string" length="128"/>
        <property name="created" column="CREATED" type="timestamp" insert="false" update="false"/>
    	<property name="modified" column="MODIFIED" type="timestamp" insert="false" update="false"/>    	
    </class>

    <query name="VirtualInstanceType.findByLabel">
        <![CDATA[from com.redhat.rhn.domain.server.VirtualInstanceType as vit where vit.label = :label]]>
    </query>
</hibernate-mapping>
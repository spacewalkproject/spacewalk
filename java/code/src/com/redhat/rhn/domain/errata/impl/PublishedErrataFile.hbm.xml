<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.redhat.rhn.domain.errata.impl.PublishedErrataFile" table="rhnErrataFile">
        <id name="id" type="long" column="id">
            <meta attribute="scope-set">protected</meta>
            <generator class="sequence">
                <param name="sequence">RHN_ERRATAFILE_ID_SEQ</param>
            </generator>
        </id>
        <many-to-one name="checksum" class="com.redhat.rhn.domain.common.Checksum"
            column="checksum_id" />
        <property name="fileName" type="string" length="1024" />
        <property name="created" column="created" type="timestamp"
            insert="false" update="false"/>
        <property name="modified" column="modified" type="timestamp"
            insert="false" update="false"/>
        <many-to-one name="fileType" class="com.redhat.rhn.domain.errata.ErrataFileType"
            column="type" />
        <many-to-one name="errata" class="com.redhat.rhn.domain.errata.impl.PublishedErrata"
            column="errata_id" />
        <set name="channels" lazy="true" table="rhnErrataFileChannel">
            <key column="errata_file_id"/>
            <many-to-many
                class="com.redhat.rhn.domain.channel.Channel"
                column="channel_id"/>
        </set>
        <set name="packages" lazy="true" table="rhnErrataFilePackage"
            order-by="PACKAGE_ID asc">
            <key column="errata_file_id"/>
            <many-to-many class="com.redhat.rhn.domain.rhnpackage.Package"
                column="package_id"/>
        </set>
    </class>
    <query name="PublishedErrataFile.listByErrata">
        <![CDATA[from com.redhat.rhn.domain.errata.impl.PublishedErrataFile as pef
                 where pef.errata.id = :errata_id]]>
    </query>
    <query name="PublishedErrataFile.listByErrataAndFileType">
        <![CDATA[from com.redhat.rhn.domain.errata.impl.PublishedErrataFile as pef
                 where pef.errata.id = :errata_id and pef.fileType.label = :file_type]]>
    </query>
     <query name="PublishedErrataFile.lookupByErrataAndPackage">
        <![CDATA[from com.redhat.rhn.domain.errata.impl.PublishedErrataFile as pef
                 where pef.errata = :errata and  :package in elements(pef.packages) ]]>
    </query>
</hibernate-mapping>

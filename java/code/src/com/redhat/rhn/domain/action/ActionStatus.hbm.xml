<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.redhat.rhn.domain.action.ActionStatus"
        table="rhnActionStatus" mutable="false">
        <cache usage="read-only"/>
        <id name="id" type="long" column="id">
            <meta attribute="scope-set">protected</meta>
            <generator class="assigned" />
        </id>
        <property name="name" type="string" column="name" />
    </class>

    <query name="ActionStatus.loadAll">
        <![CDATA[from com.redhat.rhn.domain.action.ActionType]]>
    </query>
    <query name="ActionStatus.findByName">
        <![CDATA[from com.redhat.rhn.domain.action.ActionStatus as s where s.name = :name]]>
    </query>
</hibernate-mapping>

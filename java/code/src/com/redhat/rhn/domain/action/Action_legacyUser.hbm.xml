    <sql-query name="Action.getServerActionCountByStatus">
        <return-scalar type="int" column="count"/>
        <![CDATA[select count(sa.server_id) as count from rhnServerAction sa where sa.action_id = :aid and
                                sa.status = :stid]]>
    </sql-query>




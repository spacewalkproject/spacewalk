<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.redhat.rhn.taskomatic.TaskoBunch"
        table="rhnTaskoBunch">

        <id name="id" type="long" column="id">
            <meta attribute="scope-set">protected</meta>
            <generator class="sequence">
                <param name="sequence">RHN_TASKO_BUNCH_ID_SEQ</param>
            </generator>
        </id>

        <property name="name" type="string" column="name" unique="true"/>
        <property name="description" type="string" column="description"/>
        <property name="activeFrom" type="date" column="active_from"/>
        <property name="activeTill" type="date" column="active_till"/>
        <property name="orgBunch" type="string" column="org_bunch"/>

        <property name="created" column="created" type="timestamp"
            insert="false" update="false"/>
        <property name="modified" column="modified" type="timestamp"
            insert="false" update="false"/>

        <list name="templates" inverse="true" table="rhnTaskoTemplate">
            <key column="bunch_id"/>
            <index column="ordering"/>
            <one-to-many class="com.redhat.rhn.taskomatic.TaskoTemplate"/>
        </list>

    </class>

    <query name="TaskoBunch.lookupById">
        <![CDATA[FROM com.redhat.rhn.taskomatic.TaskoBunch WHERE id = :id]]>
    </query>

    <query name="TaskoBunch.lookupByName">
        <![CDATA[FROM com.redhat.rhn.taskomatic.TaskoBunch WHERE name = :name]]>
    </query>

    <query name="TaskoBunch.lookupOrgBunchByName">
        <![CDATA[FROM com.redhat.rhn.taskomatic.TaskoBunch WHERE orgBunch is not null AND name = :name]]>
    </query>

    <query name="TaskoBunch.lookupSatBunchByName">
        <![CDATA[FROM com.redhat.rhn.taskomatic.TaskoBunch WHERE orgBunch is null AND name = :name]]>
    </query>

    <query name="TaskoBunch.listBunches">
        <![CDATA[FROM com.redhat.rhn.taskomatic.TaskoBunch as b]]>
    </query>

</hibernate-mapping>

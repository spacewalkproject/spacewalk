# logrotation file for Red Hat Network Server
#
# $Id$

/var/log/rhn/rhn_server_satellite.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
}

/var/log/rhn/reposync/reposync.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
}

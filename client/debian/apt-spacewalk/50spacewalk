  Update {
        List-Refresh "true";
        Pre-Invoke {
            "if [ -x /usr/lib/apt-spacewalk/pre_invoke.py ]; then /usr/lib/apt-spacewalk/pre_invoke.py; fi";
        }
  }
};
DPkg::Post-Invoke {
    "if [ -x /usr/lib/apt-spacewalk/post_invoke.py ]; then /usr/lib/apt-spacewalk/post_invoke.py; fi";
};

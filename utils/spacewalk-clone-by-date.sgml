        <command>spacewalk-clone-by-date</command>
        <arg>options <replaceable>...</replaceable></arg>
    </cmdsynopsis>
    <cmdsynopsis>
        <arg>-c <replaceable>CONFIGFILE</replaceable></arg>
        <arg>--config=<replaceable>CONFIGFILE</replaceable></arg>
    </cmdsynopsis>
